<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Existing UI Elements -->
        <TextView
            android:id="@+id/text_setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Setup Fragment"
            android:textSize="18sp" />

        <!-- Existing Functionality Buttons -->
        <Button
            android:id="@+id/buttonGainWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gain Weight" />

        <Button
            android:id="@+id/buttonLoseWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lose Weight" />

        <Button
            android:id="@+id/buttonStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strength" />

        <Button
            android:id="@+id/buttonChangeGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Goal"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonChangePhysicalAttributes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Physical Attributes"
            android:visibility="gone" />

        <!-- Input Layout for Physical Attributes -->
        <LinearLayout
            android:id="@+id/inputLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingTop="16dp">

            <EditText
                android:id="@+id/editHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Height (cm)"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Weight (kg)"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/editAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:inputType="number" />

            <Button
                android:id="@+id/buttonSaveData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Data" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
